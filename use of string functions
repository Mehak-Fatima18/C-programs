#include <iostream>
#include<string>
#include<cstring>
using namespace std;


int main()
{
    char name[50]="mehak";
    char name2[50] = "fatima";
    //find length
    int c=strlen(name);
    int d = strlen(name2);
    cout << "length of 1 name=" << c<<endl;
    cout << "length of 2 name= " << d<<endl;
    //compare 2 strings
    int f=strcmp(name2, name);
    cout <<"comparison: "<< f << endl;
    //concatenates both strings
     strcat_s(name, name2);
     cout <<"concatenation: "<< name << endl;
     //copying 2nd string into 1st
     strcpy_s(name, name2);
     cout <<"after copying: "<< name;

    
}
