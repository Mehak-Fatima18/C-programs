#include <iostream>
#include<string>
using namespace std;


int main()
{
    char c;
    int count = 0;
    char arr[50];
    cout << "enter any name: ";
    cin >> arr;
    cout << "Enter character you want to check=";
    cin >> c;
    for (int i = 0;arr[i]!='\0'; i++) {
       
            if (arr[i] == c)
                count++;

        
    }
    cout << "the letter" << c << "appears " << count << "times.";


    
}
