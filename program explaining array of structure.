#include <iostream>
#include<string>
using namespace std;

int main() {
	struct book {
		char title[34];
	    char author[45];
		int pages;
		float price;
	};
	struct book b[2];
	for (int i = 0; i < 2; i++) {
		cout << "Enter title,author,pages and price of books: "<<endl;
		
		cin >>b[i].title>>b[i].author>> b[i].pages >> b[i].price;
	}
	cout << "Records of books is " << endl;
	for (int i = 0; i < 2; i++) {
		
		cout<< b[i].title <<"\t" << b[i].author<<"\t" << b[i].pages <<"\t" << b[i].price<<endl;
	}
	

}
